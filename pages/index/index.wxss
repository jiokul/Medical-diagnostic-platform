/**index.wxss**/
.main{
  height: 100%;
  width: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  margin-top: 5%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.userid {
  display: flex;
  height: 40px;
  margin: 20px;
  border: 3rpx solid #faca82;
  border-radius: 10rpx;
}

.inputid_text {
  position: absolute;
  font-size: 12px;
  background: white;
  margin: -10px 0 0 10px;
  padding: 0 5px;
  color: rgb(144, 147, 167);
}

.inputid {
  margin:  auto 10px;
}

.inputname_text {
  position: absolute;
  font-size: 12px;
  background: white;
  margin: -10px 0 0 10px;
  padding: 0 5px;
  color: rgb(144, 147, 167);
}

.inputname {
  margin:  auto 10px;
}

.username {
  display: flex;
  height: 40px;
  margin: 20px;
  border: 3rpx solid #faca82;
  border-radius: 10rpx;
}

.useravatar {
  display: flex;
  justify-content: center;
}
.avatar {
  overflow:hidden;  
  display: block;  
  width: 200rpx;  
  height: 200rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}

.text {
  display: flex;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 5%;
  text-align: center;
  font-family: STKaiti;
}

.submitbutton {
    height: 90rpx !important;
    width: 470rpx  !important;
    color: white !important;
    font-size: 40rpx !important;
    margin-top: 6%;
    background-color: rgb(248, 61, 28) !important ;
    align-items: center;
    justify-content: center;
}

